<div class="post-box">
<table class="post-table">
	<tr>
		<th rowspan="2"><%= image_tag post.user.profile.avatar.url(:thumb) %></th>
		<td class="post-header"><%= link_to post.user.full_name, profile_path(post.user.id) %> posted:</td>
	</tr>
	<tr>
		<td><%= time_ago_in_words(post.created_at) %> ago</td>
	</tr>
</table><br/>
<p>"<%= post.content %>"</p>

<% if current_user == post.user %>
<p class="delete-link"><%= link_to "Delete", post, method: :delete,
		data: { confirm: "Are you sure you want to delete this post?" } %></p>

<% end %>

<%= render '/likes/like_link', likable_type: "Post", item: post %>
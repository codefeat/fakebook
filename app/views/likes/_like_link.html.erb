
<% likable_id = item.id %>
<% user_like = find_user_like(likable_id, likable_type) %>


<% if user_like %>
	<%= link_to "Unlike (#{item.likes.count})", like_path(user_like), method: :delete, class: "btn-xs, btn-info like-link" %>
<% else %>
	<%= link_to "Like (#{item.likes.count})", likes_path(likable_type: likable_type, likable_id: likable_id, user_id: current_user.id), class: "btn-xs btn-success like-link"%>
<% end %>